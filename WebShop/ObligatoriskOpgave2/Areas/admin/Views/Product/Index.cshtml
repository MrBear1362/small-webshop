@model IEnumerable<ObligatoriskOpgave2.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>All Products</h2>

<p>
    @Html.ActionLink("Go to Books", "Index", "Book") | @Html.ActionLink("Go to Movies", "Index", "Movie") | @Html.ActionLink("Go to Music", "Index", "Music") | @Html.ActionLink("Go to Customers", "Index", "Customer")

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeVariation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeVariation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
